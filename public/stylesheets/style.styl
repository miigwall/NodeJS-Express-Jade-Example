@import "mixins/css3"
/* Reset
Based on http://meyerweb.com/eric/thoughts/2008/01/15/resetting-again/
Removed elements not supported in HTML5
-----------------------------------------------------------------------------*/
html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strike, strong, sub, sup, var,
b, i,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  vertical-align baseline

/*
Trigger the new block level elements in to the correct content flow
-----------------------------------------------------------------------------*/
article, aside, dialog, figure,
footer, header, hgroup, menu,
nav, section
  display block


/* Set up document
-----------------------------------------------------------------------------*/
body
  text-align center
  background #000
  font-family Sans-serif
  background-color #fff

#main
  margin-top 20px
  border-left none
  border-right none
  min-height 100%
  padding 20px
  text-align center

#main h1, #main h2
  font-family Anders
  margin-bottom 20px
  font-size 70px
  font-weight bold

#main img
   margin-bottom 20px

#main h2
  font-family Sans-serif
  font-size 30px

#main input
  margin-top 10px
  border 1px solid #aaa
  font-size 15px
  padding 5px

#main input[type=submit]
  border-radius 20px
  padding 20px 40px 20px 40px
  border-radius 100%
  font-size 20px
  width 180px

#main input[type=submit]:hover
  background-color #aaa
  color #111
  cursor pointer

#main input#read_code
  padding 20px
  text-align center
  font-size 20px

#main .checkpoint_icon
  height 200px

.pointlinks
   margin-top 10px

.pointlinks a
   display inline-block
   padding 20px 40px 20px 40px
   border 1px solid #aaa
   margin 0 10px 0 10px
   text-decoration none
   color #444
   border-radius 50%
   width 80px

.pointlinks a:hover
   background-color #aaa
   color #111
